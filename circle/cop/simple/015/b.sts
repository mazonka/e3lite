#/bin/sh

# hierarchy and instantiantions

c=$1

out() {
echo ""
echo "=== start $1"
cat $1
echo "=== end $1"
rm -f $1
}

run(){
echo ""
echo "[$1 $2]"
$c $1 $2
if [ "$3" != "" ]; then
test -f $3 && out $3
fi
}

run -cc hier.cr
run -cn hier.cr.out
run -cm hier.cr.out.out
run -cv hier.cr.out.out.out

out hier.cr.out.out.out.out
rm -f hier.cr.*

