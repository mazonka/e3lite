#/bin/sh

# odd table

c=$1

out() {
echo ""
echo "=== start $1"
cat $1
echo "=== end $1"
rm -f $1
}

run(){
echo ""
echo "[$1 $2]"
$c $1 $2
if [ "$3" != "" ]; then
test -f $3 && out $3
fi
}


cp 101.ta 101.cr.ttb
run -ct 101.cr
dos2unix 101.tb 101.cr.ttb 2> /dev/null
cmp 101.tb 101.cr.ttb || echo "ERROR 1"
out 101.cr.ttb

cp 101.tb 101.cr.ttb
run -ca 101.cr
dos2unix 101.ta 101.cr.ttb 2> /dev/null
cmp 101.ta 101.cr.ttb || echo "ERROR 2"
out 101.cr.ttb
