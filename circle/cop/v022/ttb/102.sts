#/bin/sh

# even table

c=$1

out() {
echo ""
echo "=== start $1"
cat $1
echo "=== end $1"
rm -f $1
}

run(){
echo ""
echo "[$1 $2]"
$c $1 $2
if [ "$3" != "" ]; then
test -f $3 && out $3
fi
}


cp 102.ta 102.cr.ttb
run -ct 102.cr
dos2unix 102.tb 102.cr.ttb 2> /dev/null
cmp 102.tb 102.cr.ttb || echo "ERROR 1"
out 102.cr.ttb

cp 102.tb 102.cr.ttb
run -ca 102.cr
dos2unix 102.ta 102.cr.ttb 2> /dev/null
cmp 102.ta 102.cr.ttb || echo "ERROR 2"
out 102.cr.ttb
